@model IEnumerable<BalanceProject2.Models.Users>

<form action="~/Home/AddUsers">
    <button class="btn btn-primary">Добавить нового пользователя</button>
</form>
<table class="table">
    <tr>
        <th>
            Логин
        </th>
        <th>
           Пароль
        </th>
        <th>
            Права
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.Name)
            </td>
            <td>
                @Html.ActionLink("Редактирвать", "UpdateUsers", new { id = item.Id_User }) 
                @Html.ActionLink("Удалить", "DeleteUsers", new { id = item.Id_User })
            </td>
        </tr>
    }

</table>
