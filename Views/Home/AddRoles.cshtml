@model BalanceProject2.Models.Roles

@{
    ViewBag.Title = "Добавление роли";
}

<h2>Добавление ролей</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Роли</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label class = "control-label col-md-2">Имя роли</label>
           <div class="col-md-10">
               @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
               @ViewBag.ErrorMessage
           </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать роль" class="btn bg-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Перейти к списку ролей", "ListRoles")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
